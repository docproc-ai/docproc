{
  "name": "docproc",
  "private": true,
  "type": "module",
  "workspaces": ["packages/*"],
  "scripts": {
    "dev": "concurrently \"bun run dev:backend\" \"bun run dev:frontend\"",
    "dev:backend": "bun --watch packages/backend/src/index.ts",
    "dev:frontend": "bun run --cwd packages/frontend dev",
    "build": "bun run --cwd packages/frontend build",
    "preview": "bun run --cwd packages/frontend preview",
    "test": "vitest run",
    "format": "biome format",
    "lint": "biome lint",
    "check": "biome check",
    "ui:add": "bunx --bun shadcn@latest add",
    "db:push": "drizzle-kit push",
    "db:studio": "drizzle-kit studio",
    "db:generate": "drizzle-kit generate"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.11",
    "@testing-library/dom": "^10.4.1",
    "@testing-library/react": "^16.3.1",
    "@types/bun": "^1.3.5",
    "@types/node": "^25.0.3",
    "concurrently": "^9.2.1",
    "drizzle-kit": "^0.31.8",
    "jsdom": "^27.4.0",
    "typescript": "^5.9.3",
    "vitest": "^4.0.16",
    "web-vitals": "^5.1.0"
  }
}
