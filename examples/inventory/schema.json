{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "title": "Inventory",
  "description": "A simplified schema for inventory management and stock tracking",
  "required": [
    "date",
    "location",
    "items"
  ],
  "properties": {
    "date": {
      "type": "string",
      "format": "date",
      "description": "Date when the inventory was conducted",
      "title": "Inventory Date"
    },
    "location": {
      "type": "object",
      "description": "Location information for the inventory",
      "required": [
        "name"
      ],
      "properties": {
        "name": {
          "type": "string",
          "description": "Name of the warehouse, store, or location",
          "title": "Location Name"
        },
        "zone": {
          "type": "string",
          "description": "Specific zone, aisle, or section within the location",
          "title": "Zone"
        }
      },
      "title": "Location"
    },
    "items": {
      "type": "array",
      "description": "List of inventory items",
      "minItems": 1,
      "items": {
        "type": "object",
        "required": [
          "itemCode",
          "description",
          "systemQuantity",
          "countedQuantity"
        ],
        "properties": {
          "itemCode": {
            "type": "string",
            "description": "Unique item identifier or SKU",
            "title": "Item Code"
          },
          "description": {
            "type": "string",
            "description": "Item description or name",
            "title": "Description"
          },
          "category": {
            "type": "string",
            "description": "Product category or classification",
            "title": "Category"
          },
          "unit": {
            "type": "string",
            "description": "Unit of measurement (each, box, case, lb, etc.)",
            "examples": [
              "each",
              "box",
              "case",
              "lb",
              "kg"
            ],
            "title": "Unit"
          },
          "systemQuantity": {
            "type": "number",
            "minimum": 0,
            "description": "Expected quantity according to system records",
            "title": "System Quantity"
          },
          "countedQuantity": {
            "type": "number",
            "minimum": 0,
            "description": "Actual quantity counted during inventory",
            "title": "Counted Quantity"
          },
          "variance": {
            "type": "number",
            "description": "Difference between counted and system quantity",
            "title": "Variance"
          },
          "unitCost": {
            "type": "number",
            "minimum": 0,
            "description": "Cost per unit for valuation",
            "title": "Unit Cost"
          },
          "location": {
            "type": "string",
            "description": "Specific location within the warehouse (bin, shelf, etc.)",
            "title": "Item Location"
          },
          "notes": {
            "type": "string",
            "description": "Additional notes about this item count",
            "title": "Notes"
          }
        }
      },
      "title": "Items",
      "ui:widget": "table"
    },
    "notes": {
      "type": "string",
      "description": "General notes about the inventory process or findings",
      "title": "Notes"
    }
  }
}