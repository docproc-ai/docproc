{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "declaration": true,
    "baseUrl": ".",
    "paths": {
      "@docproc/frontend/*": ["./packages/frontend/*"],
      "@docproc/backend/*": ["./packages/backend/*"],
      "@docproc/shared/*": ["./packages/shared/*"],
      "@docproc/shared": ["./packages/shared/src"],
      "@docproc/backend": ["./packages/backend/src"]
    }
  },
  "exclude": ["packages/*/node_modules", "node_modules", "dist", "_legacy"]
}
