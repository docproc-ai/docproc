# Database
DATABASE_URL="postgres://postgres:postgres@localhost:5432/docproc"

# Better Auth
BETTER_AUTH_SECRET="your-secret-key-here"
BETTER_AUTH_URL="http://localhost:3000"

# API Key for external systems
API_KEY="your-super-secret-api-key-here"

# Emails to auto-assign admin role on registration
AUTH_ADMIN_EMAILS="admin@example.com"

# Email/Password Authentication
AUTH_EMAIL_PASSWORD_ENABLED=true
AUTH_DISABLE_SIGNUP=false

# Default Admin User (created on startup if not exists)
AUTH_ADMIN_EMAIL="admin@example.com"
AUTH_ADMIN_PASSWORD="changeme123"

# OAuth Providers (optional)
AUTH_GITHUB_ENABLED=false
AUTH_GITHUB_CLIENT_ID=""
AUTH_GITHUB_CLIENT_SECRET=""

AUTH_GOOGLE_ENABLED=false
AUTH_GOOGLE_CLIENT_ID=""
AUTH_GOOGLE_CLIENT_SECRET=""

AUTH_MICROSOFT_ENABLED=false
AUTH_MICROSOFT_CLIENT_ID=""
AUTH_MICROSOFT_CLIENT_SECRET=""
AUTH_MICROSOFT_TENANT_ID=""

# OpenRouter (AI Processing)
OPENROUTER_API_KEY="sk-or-xxx"
OPENROUTER_DEFAULT_MODEL="anthropic/claude-3.5-sonnet"

# Storage
STORAGE_TYPE="local"
STORAGE_LOCAL_DIR="./data/documents"

# Webhook Security (optional)
WEBHOOK_ENCRYPTION_KEY=""
