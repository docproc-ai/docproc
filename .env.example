DATABASE_URL="postgres://postgres:postgres@localhost:5432/postgres"
ANTHROPIC_API_KEY="your-anthropic-api-key-here"
OPENROUTER_API_KEY="your-openrouter-api-key-here"

# Rate Limiting
AI_RATE_LIMIT_ENABLED=false
AI_RATE_LIMIT_REQUESTS=1 # 1 request
AI_RATE_LIMIT_WINDOW_MS=60000 # 1 request per minute

# Better Auth
BETTER_AUTH_SECRET="your-secret-key-here"
BETTER_AUTH_URL="http://localhost:3000"

# Webhook Security
WEBHOOK_ENCRYPTION_KEY="your-64-character-hex-encryption-key-here-32bytes"

# API Key for external systems
API_KEY="your-super-secret-api-key-here"

# AI Model Rate Limiting
AI_RATE_LIMIT_ENABLED=true
AI_RATE_LIMIT_REQUESTS=100
AI_RATE_LIMIT_WINDOW_MS=3600000

# Email/Password Authentication
AUTH_EMAIL_PASSWORD_ENABLED=true
AUTH_ADMIN_EMAIL="admin@example.com"
AUTH_ADMIN_PASSWORD="admin123"

# Emails to set to admin once created, useful for OAuth providers
AUTH_ADMIN_EMAILS="jondo@mydomain.com"

# OAuth Providers

# Microsoft Authentication
AUTH_MICROSOFT_ENABLED=false
AUTH_MICROSOFT_CLIENT_ID="your-microsoft-client-id"
AUTH_MICROSOFT_CLIENT_SECRET="your-microsoft-client-secret"
AUTH_MICROSOFT_TENANT_ID="your-microsoft-tenant-id"

# Google Authentication
AUTH_GOOGLE_ENABLED=false
AUTH_GOOGLE_CLIENT_ID="your-google-client-id"
AUTH_GOOGLE_CLIENT_SECRET="your-google-client-secret"

# GitHub Authentication
AUTH_GITHUB_ENABLED=false
AUTH_GITHUB_CLIENT_ID="your-github-client-id"
AUTH_GITHUB_CLIENT_SECRET="your-github-client-secret"
